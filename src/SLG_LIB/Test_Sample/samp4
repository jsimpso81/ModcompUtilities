C-----SAMP4.FOR
C     UNSHADED DAMPED SINUSOID
      PROGRAM SAMP4
      DIMENSION X(151),Y(151)
      COMMON /IOUNIT/LU1,LU2,LU3,LU4,LU5
      DATA SAME/9999.0/
      DATA PI/3.14159265/
      DATA NE/151/
      WRITE (LU2,1101)
 1101 FORMAT (' UNSHADED DAMPED SINUSOID')
      CALL MODE(3,7.25,SAME,SAME)
      CALL MODE(7,SAME,7.,SAME)
      DO 21 J=1,NE
      AJ=J-1
      XARG=.04*AJ
      X(J)=XARG
   21 Y(J)=EXP(-XARG)*SIN(PI*XARG)
      CALL SCAN (X,Y,-NE,440)
      CALL DRAW (X,Y,NE,441)
      CALL AXES (6.1,'X AXIS',6.2,'Y AXIS')
      CALL NOTE (2.5,1.,'NE=',3)
      CALL NOTE (SAME,SAME,NE,0)
      CALL NOTE(5.,1.,'E=',2)
      CALL NOTE (SAME,SAME,EXP(1.),1006)
      CALL MODE (6,3.,SAME,SAME)
      CALL MODE (4,.18,.14,SAME)
      CALL NOTE (1.5,5.0,'FUNCTIONAL PLOT OF',18)
      CALL NOTE (1.5,4.5,'Y = EXP(-X) * SIN(PI*X)',23)
      CALL DRAW (0.,0.,1,9000)
      CALL DRAW(0.0,0.0,0,9999)
      CALL EXIT
      END
