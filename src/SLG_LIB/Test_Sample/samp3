C-----SAMP3.FOR
C     SHADED DAMPED SIMUSOID
      PROGRAM SAMP3
      DIMENSION X(151),Y(151),IPAT(4)
      COMMON /IOUNIT/LU1,LU2,LU3,LU4,LU5
      DATA SAME/9999.0/
      DATA PI/3.14159265/
      DATA IPAT /O'10421',O'21042',O'42104',O'104210' /
      WRITE (LU2,1101)
 1101 FORMAT (' SHADED DAMPED SINUSOID')
      CALL MODE(3,7.25,SAME,SAME)
      CALL MODE(7,SAME,7.,SAME)
      NE=151
      DO 21 J=1,NE
      AJ=J-1
      XARG=0.04*AJ
      X(J)=XARG
      Y(J)=EXP(-XARG)*SIN(PI*XARG)
   21 CONTINUE
      CALL SCAN(X,Y,-NE,440)
      CALL DRAW(X,Y,NE,441)
      CALL AXES(6.1,'X AXIS',6.2,'Y AXIS')
      CALL MODE(10,SAME,IPAT,4.)
      CALL TONE(0.0,0.0,440,0)
      CALL TONE(X,Y,NE,1)
      CALL DRAW(0.0,0.0,1,9000)
      CALL DRAW(0.0,0.0,0,9999)
      CALL EXIT
      END
