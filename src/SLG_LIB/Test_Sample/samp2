C-----SAMP2.FOR
C     21-VERTEX GOLF-BALL
      PROGRAM SAMP2
      REAL X(21),Y(21)
      COMMON /IOUNIT/LU1,LU2,LU3,LU4,LU5
      COMMON /PLTCOM/ SAME,PREF(2),LDC(2),CC(2),RORG(2),CMAT(10,3),
     &LMT(2),XYDOTS(2),SPX,SPY,MIN,NSKP,NBAD,NPLOT,MINX,MAXX,NDX,
     &NDY,LTYPE,LWDTH,DEGRAD,NBITS,NBTM1,NBYTE,NBYM1,NCHAR,NCHM1,
     &MSK(7),IBT(16)
      DATA SAME / 9999.0 /
      DATA NP/21/
      DATA PI/3.1415926535/
      WRITE (LU2,1101)
 1101 FORMAT(' 21-VERTEX GOLF-BALL')
      DEGRAD=PI/180.0
      XNP=NP
      X0=5.0
      Y0=4.0
      R=3.9
      DANG=PI*2/NP
      DO 21 I=1,NP
      X(I)=X0+R*COS(I*DANG)
      Y(I)=Y0+R*SIN(I*DANG)
21    CONTINUE
      CALL MODE(2,10.,0.,0.)
      CALL MODE(3,8.,0.,0.)
      DO 22 I=1,NP
      DO 22 J=1,NP
      IF (I .EQ. J) GO TO 22
      CALL DRAW(X(I),Y(I),1,0)
      CALL DRAW(X(J),Y(J),1,9)
   22 CONTINUE
      CALL DRAW(0.0,0.0,1,9000)
      CALL DRAW(0.0,0.0,0,9999)
      CALL EXIT
      END
